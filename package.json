{
  "name": "stasige",
  "version": "0.3.0",
  "description": "Stasige - static site generator with pug, sass, typescript, markdown",
  "type": "module",
  "engines": {
    "node": ">= 22.12 < 23"
  },
  "main": "./lib/index.js",
  "files": [
    "build/**/*"
  ],
  "dependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "color-json": "^3.0.5",
    "finalhandler": "^1.3.1",
    "gulp": "^5.0.0",
    "gulp-autoprefixer": "^9.0.0",
    "gulp-dart-sass": "^1.1.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.4",
    "gulp-typescript": "5.0.1",
    "gulp-webp": "^5.0.0",
    "lodash": "^4.17.21",
    "markdown-it": "^14.1.0",
    "markdown-it-attrs": "^4.3.1",
    "minimist": "^1.2.8",
    "node-ssh": "^13.2.0",
    "open": "^10.1.0",
    "prettier": "~3.3",
    "pug": "^3.0.3",
    "rollup": "^4.30.1",
    "serve-static": "^1.16.2",
    "tsx": "^4.19.2",
    "typescript": "~5.7.3",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@eslint/js": "~9.10",
    "@types/bootstrap": "^5.2.10",
    "@types/eslint__js": "~8.42",
    "@types/finalhandler": "^1.2.3",
    "@types/gulp": "^4.0.17",
    "@types/gulp-autoprefixer": "^0.0.37",
    "@types/gulp-dart-sass": "^1.0.5",
    "@types/gulp-rename": "^2.0.6",
    "@types/lodash": "^4.17.15",
    "@types/markdown-it": "^14.1.2",
    "@types/markdown-it-attrs": "^4.1.3",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.10.2",
    "@types/pug": "^2.0.10",
    "@types/remove-markdown": "^0.3.4",
    "@types/serve-static": "^1.15.7",
    "@types/ssh2": "^1.15.4",
    "@typescript-eslint/parser": "~8.5",
    "@vitest/coverage-v8": "~2.1",
    "@vitest/eslint-plugin": "~1.1",
    "bootstrap": "^5.3.3",
    "eslint": "~9.10",
    "eslint-config-prettier": "~9.1",
    "globals": "~15.9",
    "remove-markdown": "^0.6.0",
    "ts-api-utils": "^1.4.3",
    "tslib": "^2.8.1",
    "typescript-eslint": "~8.5",
    "vitest": "~2.1"
  },
  "scripts": {
    "fmt": "prettier \"{src,__{tests}__}/**/*.{ts,mts,json}\" --config .prettierrc --write",
    "fmt:site": "prettier \"{sites/$1,__{tests}__}/**/*.{ts,mts,json}\" --config .prettierrc --write",
    "fmt:check": "prettier \"{src,__{tests}__}/**/*.{ts,mts,json}\" --config .prettierrc --check",
    "man": "node --import=tsx ./src/man.ts $@",
    "doc": "node --import=tsx ./src/doc.ts $@",
    "copy": "node --import=tsx ./src/copy.ts $@",
    "srv": "node --import=tsx ./src/srv.ts $@",
    "logo": "node --import=tsx ./src/logo.ts",
    "new": "node --import=tsx ./src/new.ts $@",
    "vars": "node --import=tsx ./src/vars.ts $@",
    "wrk": "node --import=tsx ./src/wrk.ts $@",

    "man_": "node ./build/man.js $@",
    "doc_": "node ./build/doc.js $@",
    "copy_": "node ./build/copy.js $@",
    "srv_": "node ./build/srv.js $@",
    "logo_": "node ./build/logo.js",
    "new_": "node ./build/new.js $@",
    "vars_": "node ./build/vars.js $@",
    "wrk_": "node --import=tsx src/wrk.ts $@",

    "prod": "./wrk -bd $1",
    "-": "--- below: unused ",
    "build": "tsc -p tsconfig.json",
    "prebuild": "#npm run lint",
    "lint": "eslint .",
    "test": "vitest run unit",
    "test:coverage": "vitest run unit --coverage.enabled --coverage.all",
    "test:watch": "vitest unit"
  },
  "author": "Andrei Zagoruiko<adkrix@gmail.com>",
  "license": "Apache-2.0",
  "keywords": [
    "ssg",
    "node",
    "tsx",
    "typescript",
    "pug",
    "markdown",
    "yaml",
    "sass",
    "scss",
    "static",
    "site",
    "generator",
    "deploy"
  ]
}
